package Loops;

public class UseWhile {
	public static void main(String [] args) {
		int num = 10;
		
		boolean isTrainComing = false;
		while(num>0) {
					System.out.println(num + " Minutes before the train is coming"); num--;
				}
		while(num==0) {System.out.println("The train is coming, close the gate");
		
		}
	}

}
